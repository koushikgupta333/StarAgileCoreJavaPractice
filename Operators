//User input 
public class Java_02_Operators {

	public static void main(String[] args) {
		System.out.println("Enter your name");
		Scanner username = new Scanner(System.in);
		String name = username.next();
		System.out.println("name entered is :"+" "+ name);
		
		System.out.println("Enter your age");
		Scanner userage = new Scanner(System.in);
		int age = username.nextInt();
		System.out.println("age entered is :"+" "+ age);
		
		System.out.println("Enter your experience");
		Scanner userexp = new Scanner(System.in);
		float exp = username.nextFloat();
		System.out.println("experience entered is :"+" "+ exp);

	}

}
